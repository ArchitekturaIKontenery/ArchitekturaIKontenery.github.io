{
  "name": "app",
  "version": "1.0.0",
  "private": true,
  "license": "UNLICENSED",
  "author": "",
  "description": "",
  "scripts": {
    "browsersync": "browser-sync start --directory --server ./public --files ./public/* --startPath index.html --ignore ./public/watch-2022.json",
    "clean": "rimraf public/*",
    "copy-assets": "cpx \"src/assets/**/*.*\" public/",
    "copy-redirects": "cpx \"src/assets/_redirects\" public/",
    "copy-html": "eleventy --input=src/html/ --output=public/ --formats=html",
    "css-compile": "tailwindcss build -i src/tailwind/tailwind.css -c src/tailwind/tailwind.config.js -o public/css/tailwind/tailwind.css",
    "css-minified": "tailwindcss build -i src/tailwind/tailwind.css -c src/tailwind/tailwind.config.js -o public/css/tailwind/tailwind.min.css --minify",
    "css": "npm-run-all --sequential css-*",
    "build": "npm-run-all --sequential clean copy-* build-js build-js-* css",
    "build-js": "esbuild src/js/main.js --bundle --minify --target=es2017 --outfile=public/js/main.js",
    "build-js-watch": "esbuild src/js/watch.js --bundle --minify --target=es2017 --outfile=public/js/watch.js",
    "build-js-vod": "esbuild src/js/vod.js --bundle --minify --target=es2017 --outfile=public/js/vod.js",
    "watch": "npm-run-all build --parallel watch-* browsersync",
    "watch-templates": "eleventy --watch --input=src/html/ --output=public/ --formats=html",
    "watch-assets": "cpx --watch -v \"src/assets/**/*.*\" public/",
    "watch-css": "tailwindcss build -i src/tailwind/tailwind.css -c src/tailwind/tailwind.config.js -o public/css/tailwind/tailwind.min.css --minify --watch",
    "watch-js": "esbuild src/js/main.js --bundle --sourcemap=inline --target=es2017 --outfile=public/js/main.js --watch",
    "watch-js-watch": "esbuild src/js/watch.js --bundle --sourcemap=inline --target=es2017 --outfile=public/js/watch.js --watch",
    "watch-js-vod": "esbuild src/js/vod.js --bundle --sourcemap=inline --target=es2017 --outfile=public/js/vod.js --watch",
    "cf-watch": "npm-run-all build --parallel watch-* cf",
    "cf": "wrangler pages dev public/ --kv dev --persist --live-reload  --local --compatibility-date=2023-05-15"
  },
  "dependencies": {
    "@alpinejs/collapse": "^3.12.1",
    "@microsoft/applicationinsights-web": "^2.8.9",
    "@tsndr/cloudflare-worker-jwt": "^2.1.3",
    "alpinejs": "^3.10.5",
    "axios": "^1.4.0",
    "esbuild": "^0.17.19",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.29.1",
    "cpx": "^1.5.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "pug": "^3.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "wrangler": "^2.20.0"
  }
}